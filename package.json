{
  "name": "siarem-crm",
  "description": "Customer relationship management apps Insan Nusa Mandiri.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "jwt-decode": "^3.1.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^2.0.4"
  },
  "scripts": {
    "react-scripts:start": "sleep 5 && react-scripts start",
    "react-scripts:build": "set \"GENERATE_SOURCEMAP=false\" && react-scripts build",
    "tailwind:create": "postcss src/styles/main.css -o src/styles/main.final.css",
    "tailwind:watch": "postcss src/styles/main.css -o src/styles/main.final.css -w",
    "start": "cross-env NODE_ENV=development run-p tailwind:watch react-scripts:start",
    "build": "cross-env NODE_ENV=production run-s tailwind:create react-scripts:build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-pxtorem": "^6.0.0",
    "purgecss": "^4.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0"
  }
}
